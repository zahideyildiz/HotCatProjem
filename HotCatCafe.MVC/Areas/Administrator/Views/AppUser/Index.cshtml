@model List<AppUserListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Birthdate</th>
        <th>Address</th>
        <th>PhoneNumber</th>
        <th>EmailConfirmed</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Username</td>
            <td>@item.Email</td>
            <td>
                @switch (item.Gender)
                {
                    case HotCat.Model.Enums.Gender.Female:
                        <span>Kadın</span>
                        break;
                    case HotCat.Model.Enums.Gender.Male:
                        <span>Erkek</span>
                        break;
                }
            </td>
            <td>
                @if (item.BirthDate != null)
                {
                    <span>@item.BirthDate.Value.ToShortDateString()</span>
                }else
                {
                    <span>Tanımsız</span>
                }
            </td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>
                @{
                    var confirmed = item.EmailConfirmed ? "Onaylı" : "Onaysız";
                    <span>@confirmed</span>
                }
            </td>

            <td>
                <a asp-action="Update" asp-controller="AppUser" asp-route-id="@item.ID">Update</a>
                <a asp-action="Delete" asp-controller="AppUser" asp-route-id="@item.ID">Delete</a>
            </td>
            <td>
                Role-1 | Role-2 
            </td>
        </tr>
    }
</table>
