@model ProductViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h1>Create</h1>
<form method="post">
    <div>
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" />
    </div>
    <div>
        <label asp-for="UnitPrice"></label>
        <input type="number" asp-for="UnitPrice" />
    </div>
    <div>
        <label asp-for="UnitsInStock"></label>
        <input type="number" asp-for="UnitsInStock" />
    </div>
    <div>
        <select asp-items="@ViewBag.CategoryListItem" asp-for="CategoryId">
            <option selected="" disabled>Select Category</option>
        </select>
    </div>
    <button type="submit">Oluştur</button>
</form>
