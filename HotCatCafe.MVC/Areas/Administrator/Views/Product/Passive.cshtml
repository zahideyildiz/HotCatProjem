@model List<HotCat.BLL.ViewModels.ProductViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Passive";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h1>Passive</h1>

<div class="mb-2">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>UnitsInStock</th>
                <th>Status</th>
                <th>Is Active</th>
                <th></th>
                <th>
                    <a href="/Administrator/Product/Index" class="btn btn-dark btn-md">Hepsi</a>
                </th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>
                        @switch (item.Status)
                        {
                            case HotCat.Model.Enums.DataStatus.INSERTED:
                                <span>Eklenmiş</span>
                                break;
                            case HotCat.Model.Enums.DataStatus.UPDATED:
                                <span>Güncellenmiş</span>
                                break;
                            case HotCat.Model.Enums.DataStatus.DELETED:
                                <span>Silinmiş</span>
                                break;

                        }
                    </td>
                    <td>
                        @{
                            string result = item.IsActive ? "Aktif" : "Pasif";
                            <span> @result </span>
                        }
                    </td>
                    <td>
                        <a href="~/Administrator/Product/Update/@item.ProductId" class="btn btn-success btn-sm">Update</a>
                        <a href="~/Administrator/Product/Delete/@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>

