@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}


@if (TempData["Success"] !=  null)
{
    <div class="alert alert-success">
        <span>@TempData["Success"]</span>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}


<section class="mt-2">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3> Ürünler</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (Model.Count > 0)
                    {
                        @foreach (var p in Model)
                        {
                            <div class="col-md-3">
                                <div class="card">
                                    <img src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png" class="card-img-top" alt="placeholder_image">
                                    <div class="card-body">
                                        <h5 class="card-title">@p.ProductName</h5>

                                        <h5>@p.UnitPrice ₺</h5>
                                        <h6>Stok: @p.UnitsInStock ADET!</h6>
                                        <h6></h6>
                                        <a asp-action="AddTable" asp-controller="Home" asp-route-id="@p.ProductId" class="btn btn-primary">Masaya Ekle</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>Herhangi bir ürün eklenmemiş</h1>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
